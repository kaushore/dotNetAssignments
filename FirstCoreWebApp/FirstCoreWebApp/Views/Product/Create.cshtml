<h1>Add Product</h1>
	<form action="Create" method="post">
		<div class="container">
            <table class="table table-bordered">
                <tr>
                    <td>ID</td>
                    <td><input type="text" name="Pid" /></td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="Pname" /></td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td><input type="text" name="Price" /></td>
                </tr>
